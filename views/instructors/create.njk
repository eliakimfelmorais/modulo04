{% extends "layout.njk" %}

{% block content %}

<form class="card" method="POST" action="/instructors">
    <section class="avatar" 
    style="background: url(https://source.unsplash.com/collection/10552289/500x500) no-repeat center center / cover"></section>
    <section class="details">

 

    <h3> Novo Instrutor </h3>
    
    <div class="item">
        <div>Avatar URL</div>
        <input
            type="url"
            name="avatar_url"
            placeholder="http://"
            >
    </div>

     <div class="item">
        <div>Instrutor</div>
        <input
            type="text"
            name="name"
            placeholder="Nome do Instrutor">
    </div>

    <div class="item">
        <div>Data de Nascimento</div>
        <input
            type="date"
            name="birth">
    </div>

    <div class="item">
        <div>Sexo</div>
            <span><input type="radio" name="gender" checked="true"> Masculino</span>
            <span><input type="radio" name="gender" checked="true"> Feminino</span>

    </div>

    <div class="item">
        <div>Area de Atuação</div>
        <div>
            <input type="text" name="services"
            placeholder="Separe os serviços prestados por vírgula: Ex Musculação, crossfit">
        </div>
    </div>

     <button type="submit">Salvar</button>

    </section>
</form>

{% endblock content %}