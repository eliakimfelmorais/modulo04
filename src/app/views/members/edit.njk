{% extends "layout.njk" %}

{% block content %}

<div class="card">
    <form class="card" method="POST" action="/members?_method=PUT">
        <section class="avatar" 
            style="background: url({{member.avatar_url}}) no-repeat center center / cover">
        </section>
    
        <section class="details">

            <h3> Editar Membro </h3>
        
            {% include "members/form.njk" %}

            <input
            type="hidden"
            name="id"
            value={{member.id}}>

    
    
    </form>
        
    <form id="form-delete" action="/members?_method=DELETE" method="post">
        <input type="hidden" name="id" value={{member.id}}>
        <button type="submit">Deletar</button>
    </form>

    {% block js %}
        <script src="/delete.js"></script>
    {% endblock %}


    </section>


</div>





{% endblock content %}